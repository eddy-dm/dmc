{
  "name": "@lit/localize",
  "version": "0.11.3",
  "publishConfig": {
    "access": "public"
  },
  "description": "Localization client library for lit-html",
  "license": "BSD-3-Clause",
  "author": "Google LLC",
  "homepage": "https://github.com/Lit/Lit/tree/main/packages/localize",
  "repository": {
    "type": "git",
    "url": "https://github.com/Lit/Lit.git",
    "directory": "packages/localize"
  },
  "main": "lit-localize.js",
  "type": "module",
  "scripts": {
    "build": "wireit",
    "build:ts": "wireit",
    "test": "wireit"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:ts",
        "../lit:build",
        "../reactive-element:build"
      ]
    },
    "build:ts": {
      "command": "tsc --build --pretty",
      "clean": "if-file-deleted",
      "dependencies": [
        "../lit:build:ts:types",
        "../reactive-element:build:ts:types"
      ],
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "lit-localize.{js,js.map,d.ts}",
        "init",
        "internal",
        "tests",
        ".tsbuildinfo"
      ]
    },
    "test": {
      "command": "node ../tests/run-web-tests.js",
      "dependencies": [
        "build",
        "../tests:build"
      ],
      "files": [
        "web-test-runner.config.js"
      ],
      "output": []
    }
  },
  "files": [
    "/lit-localize.d.ts",
    "/lit-localize.js",
    "/lit-localize.js.map",
    "/internal/",
    "/init/"
  ],
  "dependencies": {
    "@lit/reactive-element": "^1.0.0",
    "lit": "^2.0.0"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.1.5",
    "@types/chai": "^4.2.12",
    "@types/mocha": "^9.0.0",
    "@web/test-runner": "^0.13.16",
    "@web/test-runner-playwright": "^0.8.4",
    "chai": "^4.2.0",
    "mocha": "^9.1.1"
  }
}
